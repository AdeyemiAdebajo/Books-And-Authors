@page
@model MyBooks.Pages.Authors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Author</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Author.AuthorId" />
            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label"></label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label"></label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Title" class="control-label"></label>
                <input asp-for="Author.Title" class="form-control" />
                <span asp-validation-for="Author.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Isbn" class="control-label"></label>
                <input asp-for="Author.Isbn" class="form-control" />
                <span asp-validation-for="Author.Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <input type="submit" value="Save" class="btn btn-primary" /> *@
            </div>
        </form><br>
        <p class="btn btn-danger">Changes cannot be saved</p><br>
         <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
